<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Scores

    <a data-toggle="collapse" href="#setting_scores_new_form">
      Add score
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @setting.scores.each do |score| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/scores/<%= score.id %>">
          <%= score.created_at %>
        </a>

        <a href="/delete_score_from_setting/<%= score.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="setting_scores_new_form">
        <%= render partial: "setting_templates/setting_scores_new_form" %>
      </div>
    </div>

  </ul>
</div>
