<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All settings
    </h1>

    <a href="/settings/new" class="btn btn-block btn-outline-secondary">
      Add a new setting
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "setting_templates/settings_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Owner
        </th>

        <th>
          Upper digit limit
        </th>

        <th>
          Lower digit limit
        </th>

        <th>
          Multiplication
        </th>

        <th>
          Addition
        </th>

        <th>
          Division
        </th>

        <th>
          Subtraction
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @settings.each do |setting| %>
      <tr>
        <td>
          <%= setting.id %>
        </td>

        <td>
          <% if setting.owner.present? %>
            <a href="/users/<%= setting.owner.id %>">
              <%= setting.owner.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= setting.upper_digit_limit %>
        </td>

        <td>
          <%= setting.lower_digit_limit %>
        </td>

        <td>
          <%= setting.multiplication %>
        </td>

        <td>
          <%= setting.addition %>
        </td>

        <td>
          <%= setting.division %>
        </td>

        <td>
          <%= setting.subtraction %>
        </td>

        <td>
          <%= time_ago_in_words(setting.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(setting.updated_at) %> ago
        </td>

        <td>
          <a href="/settings/<%= setting.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @settings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
