<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All settings
    </h1>

    <a href="/settings/new" class="btn btn-block btn-outline-secondary">
      Add a new setting
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Owner
        </th>

        <th>
          Upper digit limit
        </th>

        <th>
          Lower digit limit
        </th>

        <th>
          Multiplication
        </th>

        <th>
          Addition
        </th>

        <th>
          Division
        </th>

        <th>
          Subtraction
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @settings.each do |setting| %>
      <tr>
        <!-- Display setting.id start -->
        <td>
          <%= setting.id %>
        </td>
        <!-- Display setting.id end -->

        <!-- Display setting.owner_id start -->
        <td>
          <% if setting.owner.present? %>
            <a href="/users/<%= setting.owner.id %>">
              <%= setting.owner.email %>
            </a>
          <% end %>
        </td>
        <!-- Display setting.owner_id end -->

        <!-- Display setting.upper_digit_limit start -->
        <td>
          <%= setting.upper_digit_limit %>
        </td>
        <!-- Display setting.upper_digit_limit end -->

        <!-- Display setting.lower_digit_limit start -->
        <td>
          <%= setting.lower_digit_limit %>
        </td>
        <!-- Display setting.lower_digit_limit end -->

        <!-- Display setting.multiplication start -->
        <td>
          <%= setting.multiplication %>
        </td>
        <!-- Display setting.multiplication end -->

        <!-- Display setting.addition start -->
        <td>
          <%= setting.addition %>
        </td>
        <!-- Display setting.addition end -->

        <!-- Display setting.division start -->
        <td>
          <%= setting.division %>
        </td>
        <!-- Display setting.division end -->

        <!-- Display setting.subtraction start -->
        <td>
          <%= setting.subtraction %>
        </td>
        <!-- Display setting.subtraction end -->

        <!-- Display setting.created_at start -->
        <td>
          <%= time_ago_in_words(setting.created_at) %> ago
        </td>
        <!-- Display setting.created_at end -->

        <!-- Display setting.updated_at start -->
        <td>
          <%= time_ago_in_words(setting.updated_at) %> ago
        </td>
        <!-- Display setting.updated_at end -->

        <td>
          <a href="/settings/<%= setting.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @settings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
