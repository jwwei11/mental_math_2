<%= search_form_for @q, :class => collapse_search_form, :id => "settings_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :subtraction_eq, "Subtraction" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :subtraction_eq, "1", checked: ((params[:q] && params[:q][:subtraction_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :subtraction_eq, "0", checked: ((params[:q] && params[:q][:subtraction_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :subtraction_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :division_eq, "Division" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :division_eq, "1", checked: ((params[:q] && params[:q][:division_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :division_eq, "0", checked: ((params[:q] && params[:q][:division_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :division_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :addition_eq, "Addition" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :addition_eq, "1", checked: ((params[:q] && params[:q][:addition_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :addition_eq, "0", checked: ((params[:q] && params[:q][:addition_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :addition_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :multiplication_eq, "Multiplication" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :multiplication_eq, "1", checked: ((params[:q] && params[:q][:multiplication_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :multiplication_eq, "0", checked: ((params[:q] && params[:q][:multiplication_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :multiplication_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :lower_digit_limit, "Lower digit limit" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :lower_digit_limit_gteq, :class => "form-control", :placeholder => "Lower digit limit greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :lower_digit_limit_lteq, :class => "form-control", :placeholder => "Lower digit limit less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :upper_digit_limit, "Upper digit limit" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :upper_digit_limit_gteq, :class => "form-control", :placeholder => "Upper digit limit greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :upper_digit_limit_lteq, :class => "form-control", :placeholder => "Upper digit limit less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :owner_email_cont, "User email contains" %>
    <%= f.text_field :owner_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Score Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='scoresgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :scores_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Score Created at greater than or equal to", :data => {:target => '#scoresgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#scoresgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='scoreslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :scores_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Score Created at less than or equal to", :data => {:target => '#scoreslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#scoreslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#scoresgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#scoreslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#scoresgteqcreated_atPicker').on("dp.change", function (e) {
              $('#scoreslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#scoreslteqcreated_atPicker').on("dp.change", function (e) {
              $('#scoresgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/settings" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#settings_filters">
  Show filters
</a>
