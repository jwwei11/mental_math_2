<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All scores
    </h1>

    <a href="/scores/new" class="btn btn-block btn-outline-secondary">
      Add a new score
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Total score
        </th>

        <th>
          Question types
        </th>

        <th>
          Response times
        </th>

        <th>
          Setting
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @scores.each do |score| %>
      <tr>
        <!-- Display score.id start -->
        <td>
          <%= score.id %>
        </td>
        <!-- Display score.id end -->

        <!-- Display score.total_score start -->
        <td>
          <%= score.total_score %>
        </td>
        <!-- Display score.total_score end -->

        <!-- Display score.question_types start -->
        <td>
          <%= score.question_types %>
        </td>
        <!-- Display score.question_types end -->

        <!-- Display score.response_times start -->
        <td>
          <%= score.response_times %>
        </td>
        <!-- Display score.response_times end -->

        <!-- Display score.setting_id start -->
        <td>
          <%= score.setting.owner_id %>
        </td>
        <!-- Display score.setting_id end -->

        <!-- Display score.created_at start -->
        <td>
          <%= time_ago_in_words(score.created_at) %> ago
        </td>
        <!-- Display score.created_at end -->

        <!-- Display score.updated_at start -->
        <td>
          <%= time_ago_in_words(score.updated_at) %> ago
        </td>
        <!-- Display score.updated_at end -->

        <td>
          <a href="/scores/<%= score.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @scores, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
