<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All scores
    </h1>

    <a href="/scores/new" class="btn btn-block btn-outline-secondary">
      Add a new score
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "score_templates/scores_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Total score
        </th>

        <th>
          Question types
        </th>

        <th>
          Response times
        </th>

        <th>
          Setting
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @scores.each do |score| %>
      <tr>
        <td>
          <%= score.id %>
        </td>

        <td>
          <%= score.total_score %>
        </td>

        <td>
          <%= score.question_types %>
        </td>

        <td>
          <%= score.response_times %>
        </td>

        <td>
          <% if score.setting.present? %>
            <a href="/settings/<%= score.setting.id %>">
              <%= score.setting.owner_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(score.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(score.updated_at) %> ago
        </td>

        <td>
          <a href="/scores/<%= score.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @scores, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
